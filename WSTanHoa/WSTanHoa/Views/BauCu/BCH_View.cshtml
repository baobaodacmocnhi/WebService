
@{
    Layout = null;
    ViewBag.Title = "Kết Quả Bầu Ban Chấp Hành";
    ViewBag.Title = "KẾT QUẢ GIỚI THIỆU BỔ SUNG QUY HOẠCH CHỨC DANH ỦY VIÊN BAN CHẤP HÀNH ĐOÀN TCTY NHIỆM KỲ 2022 - 2027";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="shortcut icon" type="image/ico" href="~/Images/logoctycp.png">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/cssDoanTCT2022")
    <style>
        body {
            background-image: url('../../Images/daihoidoantct2022.png');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% 100%;
        }
    </style>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container" style="margin-top:120px">
        <div class="card rounded-3 shadow-sm">
            <div class="card-header text-center">
                <h4 class="text-primary">@ViewBag.Title</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("BCH_View", "BauCu", FormMethod.Post))
                {
                    <div class="row mb-3">
                        <div class="col-2 fw-bold text-danger">Tổng: @ViewBag.Tong</div>
                        <div class="col-2 fw-bold text-danger">Hợp Lệ: @ViewBag.HopLe</div>
                        <div class="col-2 fw-bold text-danger">Không Hợp Lệ: @ViewBag.KhongHopLe</div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="overflow-auto" style="height:60vh">
                                <table class="table table-striped">
                                    <thead>
                                        <tr class="fw-bold">
                                            <td>STT</td>
                                            <td>Họ Tên</td>
                                            @*<td>Đồng Ý</td>
                                                <td>% Đồng Ý</td>
                                                <td>Không Đồng Ý</td>
                                                <td>% Không Đồng Ý</td>*@
                                            <td>Năm Sinh</td>
                                            <td>Chức Danh</td>
                                            <td>Số Phiếu Giới Thiệu</td>
                                            <td>% Số Phiếu Giới Thiệu</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.BCH_BoPhieu != null)
                                        {
                                            foreach (var item in ViewBag.BCH_BoPhieu)
                                            {
                                                <tr>
                                                    <td>
                                                        <label>@item.MLT</label>
                                                    </td>
                                                    <td>
                                                        <label>@item.HoTen</label>
                                                    </td>
                                                    @*<td>
                                                            <label>@item.DiaChi</label>
                                                        </td>
                                                        <td>
                                                            <label>@item.DienThoai</label>
                                                        </td>
                                                        <td>
                                                            <label>@item.DinhMuc</label>
                                                        </td>
                                                        <td>
                                                            <label>@item.DinhMucHN</label>
                                                        </td>*@
                                                    <td>
                                                        <label>@item.HieuDH</label>
                                                    </td>
                                                    <td>
                                                        <label>@item.CoDH</label>
                                                    </td>
                                                    <td>
                                                        <label>@item.DinhMuc</label>
                                                    </td>
                                                    <td>
                                                        <label>@item.DinhMucHN</label>
                                                    </td>
                                                    @*<td>
                                                            <label>@item.DiaChi</label>
                                                        </td>
                                                        <td>
                                                            <label>@item.DienThoai</label>
                                                        </td>*@
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary" name="function" value="Sort">Sort</button>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary" name="function" value="Excel">Excel</button>
                    </div>
                }
            </div>

        </div>

        @*<hr />
            <footer>
                <p>&copy; @DateTime.Now.Year Công ty Cổ phần Cấp nước Tân Hòa</p>
            </footer>*@
    </div>
</body>
</html>
