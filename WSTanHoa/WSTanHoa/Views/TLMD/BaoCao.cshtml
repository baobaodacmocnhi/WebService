@model List<WSTanHoa.Models.MView>
@{
    ViewBag.Title = "Báo Cáo Tái Lập";
}
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewBag.Title</title>
<script src="~/Scripts/jquery-3.6.0.js"></script>
@Scripts.Render("~/bundles/datepicker")
@using (Html.BeginForm("BaoCao", "TLMD", FormMethod.Post))
{
    <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <div class=""><h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6></div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
            <div class="row">
                <div class="col-auto">
                    <input class="datepicker form-control" type="text" id="TuNgay" name="TuNgay" placeholder="Từ Ngày" value="@ViewBag.TuNgay" autocomplete="off" onchange="">
                </div>
                <div class="col-auto">
                    <input class="datepicker form-control" type="text" id="DenNgay" name="DenNgay" placeholder="Đến Ngày" value="@ViewBag.DenNgay" autocomplete="off">
                </div>
                <div class="col-auto">
                    <button type="submit" name="action" value="login" class="btn btn-primary">Xem</button>
                </div>
            </div>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="card-body">
                        <div class="row">
                            <div class="col">@item.TieuDe</div>
                            <div class="col">@item.SoLuong</div>
                        </div>
                    </div>
                    <div class="card-body">

                    </div>
                    @*<div class="container bg-light mt-3 py-2 rounded-3 shadow-sm">
                            <div class="row">
                                <div class="col">@item.TieuDe</div>
                                <div class="col">@item.SoLuong</div>
                            </div>
                        </div>*@
                }
            }
        </div>
    </div>
}
