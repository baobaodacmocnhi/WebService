@{
    Layout = null;
    ViewBag.Title = "Xác Nhận Đăng Nhập";
}
<head>
    <link rel="shortcut icon" type="image/ico" href="~/Images/logoctycp.png">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/cssNOTMASTER")
    <!-- Custom fonts for this template-->
    <link href="~/Template/SBAdmin2/fontawesome/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template-->
    <link href="~/Template/SBAdmin2/css/bootstrap-glyphicons.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>

</head>
<body style="background-color:#85d8f3;margin-top:-45px">
    <div class="row justify-content-center">
        <div class="col-auto">
            @*<img src="~/Images/logoctycp.png" width="100" />*@
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-auto text-center">
            <span class="text-primary fw-bold">CÔNG TY CỔ PHẦN CẤP NƯỚC TÂN HÒA</span>
            <h4 class="text-danger fw-bold">Hotline: 1900.6489</h4>
        </div>
    </div>

    <div class="container mt-3">
        @using (Html.BeginForm("Login", "KhachHang", FormMethod.Post))
        {
            <div class="card mt-3 rounded-3 shadow-sm">
                <div class="card-header">
                    <h4 class="text-primary">@ViewBag.Title</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-auto">
                            <input type="text" class="form-control" name="DienThoai" placeholder="Số Điện Thoại">
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary" name="action" value="login">Xác nhận</button>
                        </div>
                    </div>
                    <div class="row">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.AntiForgeryToken()
                    </div>
                    <div class="row mt-3">
                        <b>Điện Thoại gợi ý:</b>
                    </div>
                    @if (ViewBag.vDienThoai != null)
                {
                    foreach (var mView in ViewBag.vDienThoai)
                    {
                            <div class="row">
                                <div class="col-auto">@mView.TieuDe.</div>
                                <div class="col-auto">@mView.NoiDung</div>
                            </div>
                        }
                    }
                </div>
            </div>
        }
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Công ty Cổ phần Cấp nước Tân Hòa</p>
        </footer>
    </div>
</body>